{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es5", "es6", "ES2017", "dom", "ES2016", "ESNext.AsyncIterable"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "generated/naruto_api_nexus.d.ts"],
  "exclude": ["node_modules"]
}
